<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="admin" extends="struts-default" namespace="/admin">
        <global-results>
            <result name="error">/message.jsp</result>
        </global-results> 
        
   	
		 <action name="book_*" method="{1}" class="admin.BookAction">
			<result name="list">/admin/book.jsp</result>	
			<result name="add">/message.jsp</result>	
			<result name="addUI">/admin/addBook.jsp</result>	
			<result name="delete" type="redirect">/admin/book_list</result>				
		</action>
		
		<action name="order_*" method="{1}" class="admin.OrderAction">
			<result name="get">/admin/order.jsp</result>	
			<result name="delete">/message.jsp</result>	
			<result name="confirm">/message.jsp</result>	
			<result name="detail" >/admin/orderdetail.jsp</result>				
		</action>
		
		<action name="user_*" method="{1}" class="admin.UserAction"/>	
		
        <action name="category_*" method="{1}" class="admin.CategoryAction"/>	
        
         <action name="salestatistic_*" method="{1}" class="admin.SalestatisticAction"/>
		
    
    
    </package>


</struts>