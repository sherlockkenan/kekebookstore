<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<constant name="struts.devMode" value="true" />

	<package name="client" extends="struts-default" >

		<action name="login" class="client.LoginAction"
			method="execute">
			<result name="client" type="redirect">/client/index.jsp</result>
			<result name="admin" type="redirect">/admin/index.jsp</result>
			<result name="error">/message.jsp</result>
		</action>

	

	</package>

</struts>